
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Homepage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet"> <!-- Thêm thư viện Bootstrap Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QLBangHangA.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout1.css" />
</head>
<body>
    <style>

        .input-search-container {
            position: relative;
        }

        .search-input {
            display: none;
            width: 200px;
            padding: 0.375rem 0.75rem;
            border-radius: 0.25rem;
            border: 1px solid #ced4da;
        }

            .search-input.active {
                display: block;
            }

        .search-icon {
            cursor: pointer;
        }
       
    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index"> <img src="~/images/Picture6.png" /> </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Routes" asp-action="Index">Route</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="BusTrips" asp-action="Index">BusTrip</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Stops" asp-action="Index">Stop</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Bookings" asp-action="Index">Booking</a>
                            </li>


                    </ul>
                    
                    @if (!SignInManager.IsSignedIn(User))
                    {
                        <!-- Icons Đăng nhập/Đăng ký hiển thị khi chưa đăng nhập -->
                        <a class="btn btn-outline-light border-0" asp-area="Identity" asp-page="/Account/Login">
                            <i class="bi bi-person me-1"></i> Đăng nhập
                        </a>
                        <a class="btn btn-outline-light border-0" asp-area="Identity" asp-page="/Account/Register">
                            <i class="bi bi-pencil me-1"></i> Đăng ký
                        </a>
                    }
                    else
                    {
                        <!-- Hiển thị tên người dùng hoặc biểu tượng người dùng khi đã đăng nhập -->
                        @if (User.IsInRole("Admin"))
                        {
                            <a id="manage" class="nav-link text-white" asp-area="Admin" asp-controller="BusAdmin" asp-action="Index" title="Manage">Admin</a>
                            <a class="btn btn-outline-light border-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <i class="bi bi-box-arrow-right me-1"></i> Đăng xuất
                            </a>
                        }
                        else
                        {
                            <span class="text-white me-2">@UserManager.GetUserName(User)</span>
                            <a class="btn btn-outline-light border-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <i class="bi bi-box-arrow-right me-1"></i> Đăng xuất
                            </a>
                        }
                    }

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="footer">
            <div class="container">
                <div class="row">
                    <div class="footer-col-1">
                        <h3>Download Our App</h3>
                        <p>Download App for Andriod and ios mobile phone.</p>
                        <div class="app-logo">
                            <img src="./images/play-store.png">
                            <img src="./images/app-store.png">
                        </div>
                    </div>


                    <div class="footer-col-2">
                        <img src="./images/logodd.jpg">
                        <p>Our Purpose Is To Sustainably Make the Pleasure and Benefits of Sport Accessible to the Many </p>
                    </div>

                    <div class="footer-col-3">
                        <h3>Useful Links</h3>
                        <ul>
                            <li>Coupons</li>
                            <li>Blog Post</li>
                            <li>Return Policy</li>
                            <li>Become Affiliate</li>
                        </ul>

                    </div>
                    <div class="footer-col-4">
                        <h3>Follow us</h3>
                        <li>fACBOOK</li>
                        <li>INSTAGRTARM</li>
                        <li>TWITTER</li>
                        <li>YOUTUBE</li>
                    </div>
                </div>
                <!--Chân footer-->
                <hr>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>